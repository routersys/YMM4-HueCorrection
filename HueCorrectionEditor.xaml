<UserControl x:Class="IntegratedColorChange.HueCorrectionEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IntegratedColorChange"
             xmlns:c="clr-namespace:YukkuriMovieMaker.Controls;assembly=YukkuriMovieMaker.Controls"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=local:HueCorrectionEditorViewModel}"
             d:DesignHeight="450" d:DesignWidth="450">

    <UserControl.Resources>
        <local:AngleToPointConverter x:Key="AngleToPointConverter" />
        <local:ValueToCenterYConverter x:Key="ValueToCenterYConverter" />
        <local:IsSelectedConverter x:Key="IsSelectedConverter" />
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style TargetType="Thumb" x:Key="ControlPointThumb">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Margin" Value="-6,-6,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Ellipse x:Name="ThumbEllipse" Fill="White" Stroke="Black" StrokeThickness="1.5"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Value="True">
                    <DataTrigger.Binding>
                        <MultiBinding Converter="{StaticResource IsSelectedConverter}">
                            <Binding Path="OriginalPoint" />
                            <Binding Path="DataContext.SelectedPoint" RelativeSource="{RelativeSource AncestorType=local:HueCorrectionEditor}"/>
                        </MultiBinding>
                    </DataTrigger.Binding>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Thumb">
                                <Ellipse Fill="#FFD700" Stroke="Black" StrokeThickness="1.5"/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="RadioButton" x:Key="TabButtonStyle">
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="MinWidth" Value="25"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" Background="#333333" BorderBrush="#555555" BorderThickness="1" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#454545"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#5282D2"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#5282D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="180" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
            <RadioButton Content="H" IsChecked="{Binding IsHueMode}" Command="{Binding SetHueModeCommand}" Style="{StaticResource TabButtonStyle}" Margin="0,0,2,0" ToolTip="色相(Hue)"/>
            <RadioButton Content="S" IsChecked="{Binding IsSaturationMode}" Command="{Binding SetSaturationModeCommand}" Style="{StaticResource TabButtonStyle}" Margin="0,0,2,0" ToolTip="彩度(Saturation)"/>
            <RadioButton Content="V" IsChecked="{Binding IsLuminanceMode}" Command="{Binding SetLuminanceModeCommand}" Style="{StaticResource TabButtonStyle}" ToolTip="輝度(Value/Luminance)"/>
        </StackPanel>

        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" CornerRadius="3">
            <Grid>
                <Image x:Name="HueGradientImage" Stretch="Fill"/>

                <Canvas x:Name="ControlPointCanvas" Background="Transparent" PreviewMouseRightButtonDown="ControlPointCanvas_PreviewMouseRightButtonDown">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SizeChanged">
                            <i:InvokeCommandAction Command="{Binding SizeChangedCommand}" CommandParameter="{Binding ElementName=ControlPointCanvas}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <Canvas.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="ポイントを追加" Command="{Binding AddPointCommand}"/>
                            <MenuItem Header="選択中のポイントを削除" Command="{Binding DeleteSelectedPointCommand}"/>
                        </ContextMenu>
                    </Canvas.ContextMenu>

                    <ItemsControl ItemsSource="{Binding VerticalGridLines}" Visibility="{Binding ShowGrid, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Line Stroke="#555" StrokeThickness="1" StrokeDashArray="2 2" X1="{Binding}" Y1="0" X2="{Binding}" Y2="{Binding ElementName=ControlPointCanvas, Path=ActualHeight}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <ItemsControl ItemsSource="{Binding HorizontalGridLines}" Visibility="{Binding ShowGrid, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Line Stroke="#555" StrokeThickness="1" StrokeDashArray="2 2" X1="0" Y1="{Binding}" X2="{Binding ElementName=ControlPointCanvas, Path=ActualWidth}" Y2="{Binding}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Line X1="0" Y1="{Binding ElementName=ControlPointCanvas, Path=ActualHeight, Converter={StaticResource ValueToCenterYConverter}}"
                          X2="{Binding ElementName=ControlPointCanvas, Path=ActualWidth}" Y2="{Binding ElementName=ControlPointCanvas, Path=ActualHeight, Converter={StaticResource ValueToCenterYConverter}}"
                          Stroke="#BBBBBB" StrokeThickness="1" StrokeDashArray="2 2" IsHitTestVisible="False"/>

                    <Path x:Name="InterpolationPath" Stroke="White" StrokeThickness="1.5" Data="{Binding PathData}" Opacity="0.9" IsHitTestVisible="False"/>

                    <Line Stroke="Red" StrokeThickness="1.5"
                          X1="{Binding TimelineX}" Y1="0"
                          X2="{Binding TimelineX}" Y2="{Binding ElementName=ControlPointCanvas, Path=ActualHeight}"
                          Visibility="{Binding ShowTimeline, Converter={StaticResource BooleanToVisibilityConverter}}"
                          IsHitTestVisible="False"/>

                    <ItemsControl ItemsSource="{Binding DisplayPoints}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Thumb DragStarted="Thumb_DragStarted" DragDelta="Thumb_DragDelta" 
                                       DragCompleted="Thumb_DragCompleted" Style="{StaticResource ControlPointThumb}">
                                    <Thumb.ToolTip>
                                        <ToolTip>
                                            <TextBlock>
                                                <Run Text="X: "/>
                                                <Run Text="{Binding X, StringFormat={}{0:F2}}"/>
                                                <LineBreak/>
                                                <Run Text="Y: "/>
                                                <Run Text="{Binding Y, StringFormat={}{0:F2}}"/>
                                            </TextBlock>
                                        </ToolTip>
                                    </Thumb.ToolTip>
                                </Thumb>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Canvas>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5,0,0">
            <CheckBox Content="時間線表示" IsChecked="{Binding ShowTimeline}" Margin="0,0,10,0"/>
            <CheckBox Content="グリッド表示" IsChecked="{Binding ShowGrid}"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,5,0,0">
            <Slider Value="{Binding TimeSliderPosition}" Minimum="0" Maximum="1" IsEnabled="{Binding ShowTimeline}"
                    TickFrequency="0.01" SmallChange="0.01" LargeChange="0.1"/>
        </StackPanel>

        <c:PropertiesEditor Grid.Row="4" 
                            Target="{Binding SelectedPoint}"
                            Margin="0,10,0,0"
                            IsEnabled="{Binding IsPointSelected}"
                            BeginEdit="PropertiesEditor_BeginEdit" 
                            EndEdit="PropertiesEditor_EndEdit" />
    </Grid>
</UserControl>